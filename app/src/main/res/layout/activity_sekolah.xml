<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sekolah_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pws.schools.SekolahActivity"
    android:background="@drawable/background2">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnsd"
        android:src="@drawable/button_sd"
        android:background="#00000000"
        android:layout_above="@+id/btnsmp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="50dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnsmp"
        android:src="@drawable/button_smp"
        android:background="#00000000"
        android:layout_above="@+id/btnsma"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnsma"
        android:src="@drawable/button_sma"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnsmp"
        android:layout_marginTop="50dp"/>

</RelativeLayout>
